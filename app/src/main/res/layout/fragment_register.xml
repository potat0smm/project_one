<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RegisterFragment"
    android:fromYDelta="100%p" android:toYDelta="0%p"
    android:duration="@android:integer/config_longAnimTime">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true">

            <ImageView
                android:id="@+id/reg_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:src="@drawable/img"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/CreatAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reg_banner"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="Create Account"
                android:textColor="#FA5075"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_reg"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/CreatAccount"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="110dp"
                android:textColor="#030303"
                android:text="Hi, kindly fill in the form to proceed combat"
                android:textSize="15sp" />


            <EditText
                android:id="@+id/FullName"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_reg"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="60dp"
                android:hint="Full Name" />

            <EditText
                android:id="@+id/UserName"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FullName"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="60dp"
                android:hint="User Name" />

            <EditText
                android:id="@+id/Email"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/UserName"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="60dp"
                android:hint="Email" />

            <EditText
                android:id="@+id/Password"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Email"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="60dp"
                android:hint="Password" />

            <EditText
                android:id="@+id/Confirm_Password"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Password"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="60dp"
                android:hint="Confirm Password" />

            <Button
                android:id="@+id/btn_reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Confirm_Password"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginStart="110dp"
                android:layout_marginEnd="110dp"
                android:background="@drawable/background_btn_one"
                app:backgroundTint="@null"
                android:text="Create Account"
                android:gravity="center" />

            <TextView
                android:id="@+id/connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_reg"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="150dp"
                android:layout_marginEnd="170dp"
                android:layout_marginTop="15dp"
                android:textColor="#FA5075"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="13sp"
                android:text="Connect With:"/>

            <ImageView
                android:id="@+id/google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/connect"
                android:src="@drawable/google_"
                android:layout_marginTop="10dp"
                android:layout_marginStart="150dp"/>
            <ImageView
                android:id="@+id/facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/connect"
                android:src="@drawable/facebook"
                android:layout_marginTop="10dp"
                android:layout_marginStart="205dp"/>

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/google"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="130dp"
                android:layout_marginEnd="132dp"
                android:text="Already have an account?"
                android:textColor="#030303"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/go_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="150dp"
                android:layout_marginEnd="150dp"
                android:gravity="center"
                android:text="Login"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#FA5075" />
        </RelativeLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>