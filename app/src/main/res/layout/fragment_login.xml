<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LoginFragment">

    <ScrollView
        android:id="@+id/scrollView_Two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/login_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="40dp"
            android:adjustViewBounds="true"
            android:src="@drawable/img_1" />

        <TextView
            android:id="@+id/WelcomeBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_banner"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="0dp"
            android:gravity="center"
            android:text="Welcome Back!"
            android:textColor="#FA5075"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_log"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/WelcomeBack"
            android:layout_alignParentEnd="true"
            android:textColor="#030303"
            android:layout_marginEnd="110dp"
            android:layout_marginTop="15dp"
            android:text="Hi, Kindly login to continue battle"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/email_log"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_log"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="60dp"
            android:hint="Email" />

        <EditText
            android:id="@+id/password_log"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_log"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="60dp"
            android:hint="Password"/>

        <Button
            android:id="@+id/btn_log"
            android:layout_width="151dp"
            android:layout_height="48dp"
            android:layout_below="@+id/password_log"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="110dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="110dp"
            android:background="@drawable/background_btn_one"
            app:backgroundTint="@null"
            android:text="Let’s Combat!"
            android:textColorHint="@color/white"
            android:textSize="12sp"
            android:gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/connect_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_log"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="150dp"
            android:layout_marginEnd="150dp"
            android:layout_marginTop="15dp"
            android:textColor="#FA5075"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="13sp"
            android:text="Connect With:"/>

        <ImageView
            android:id="@+id/google_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/connect_two"
            android:layout_alignParentStart="true"
            android:layout_marginStart="160dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/google_" />

        <ImageView
            android:id="@+id/facebook_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/connect_two"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="160dp"
            android:src="@drawable/facebook" />

        <TextView
            android:id="@+id/text_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/google_two"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="140dp"
            android:gravity="center"
            android:layout_marginEnd="135dp"
            android:layout_marginTop="20dp"
            android:text="Don’t have an account? "
            android:textColor="#030303"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/go_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_login"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="150dp"
            android:layout_marginEnd="150dp"
            android:gravity="center"
            android:text="Create Account"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#FA5075" />
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>